<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%= @landmark.id %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">

  <label>Landmark Name:</label>
  <input type="text" id="landmark_name" name="landmark[name]" value="<%= @landmark.name %>">

  <label>Year Completed</label>
  <input type="text" id="landmark_year_completed" name="landmark[year_completed]" value="<%= @landmark.year_completed.to_s>"

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
