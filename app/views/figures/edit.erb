<h1>Edit <%= @figure.name %></h1>
<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">

  <label>Name:</label>
  <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>">
  <br>

  <label><h4>Edit Titles:</h4></label>
    <% Title.all.each do |title| %>
    <label><%= title.name %></label>
    <input id="<%= title.name %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>>
  <% end %>
  <br>

  <label><h4>Add New Title:</h4></label>
  <input type="text" id="new_title" name="title[name]">
  <br><br>

  <label>Edit Landmarks:</label>
  <br><br>
  <% Landmark.all.each do |landmark| %>
  <label><%= landmark.name %></label>
  <input id="<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%= "checked" if @figure.landmarks.include?(landmark) %>>
  <% end %>

  <br><br>
  <label>Add New Landmark:</label>
  <input type="text" id="new_landmark" name="landmark[name]">
  <br><br>

  <input type="submit" value="Edit Figure">
</form>
