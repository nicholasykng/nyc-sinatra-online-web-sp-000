<h1>Edit <%= @figure.name %></h1>
<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <label for="figure_name">Figure Name:</label>
  <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>">
  <br>
  <label><h4>Titles:</h4></label>
    <% Title.all.each do |title| %>
    <label><%= title.name %></label>
    <input id="<%= title.name %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>>
  <% end %>
  <br>
</form>
